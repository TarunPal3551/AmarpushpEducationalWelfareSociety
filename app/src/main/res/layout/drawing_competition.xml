<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/cardView_drawingCompetition">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/drawingcompettionimageview"
                android:layout_width="216dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/card_border"
                android:drawingCacheQuality="auto"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/drawingcompetitiontextview"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/drawingcompettionimageview"
                android:background="@drawable/side_nav_bar"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="National Drawing Competition"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drawingcompetitiontextview1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_above="@+id/drawingcompetitiondescription"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="-3dp"
                android:background="@drawable/side_nav_bar"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="2017 - 18"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drawingcompetitiondescription"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="3dp"
                android:background="@drawable/side_nav_bar"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="At St. Joseph`s College, Allahabad on 9 Septhember, 2017; organised by the Amarpushup Society."
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />


        </RelativeLayout>


</android.support.v7.widget.CardView>
</RelativeLayout>