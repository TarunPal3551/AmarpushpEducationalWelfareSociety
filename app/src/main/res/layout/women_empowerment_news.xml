<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="230dp"
    android:layout_height="220dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/card_border"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_margin="2dp"

        android:background="@drawable/card_border">

        <ImageView
            android:id="@+id/women_empowerment_newsimageview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="7dp"
            android:drawingCacheQuality="auto" />

        <TextView
            android:id="@+id/women_empowerment_newstextview"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/women_empowerment_newsimageview"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textColor="@color/amarpushpapp"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>