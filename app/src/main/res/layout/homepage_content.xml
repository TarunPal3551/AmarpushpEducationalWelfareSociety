<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.amarpushp.android.client.Home.HomePageActivity"
    tools:showIn="@layout/home_page_app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_below="@+id/cardView"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Advertisment"
            android:textColor="@color/amarpushpapp"
            android:textSize="30dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/imageviewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="5dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/sliderDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <GridView
            android:id="@+id/gridviewkeyproject"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="12dp"
            android:background="@android:drawable/screen_background_light_transparent"
            android:columnWidth="150dp"
            android:gravity="center"
            android:numColumns="3">

        </GridView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageviewpager"
            android:layout_marginTop="13dp"
            android:background="@drawable/card_border"
            android:gravity="center"
            android:text="Primary Projects"
            android:textAlignment="center"
            android:textColor="@color/amarpushpapp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/newstextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridviewkeyproject"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_border"
            android:gravity="center"
            android:text="News"
            android:textColor="@color/amarpushpapp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/newshomepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newstextview"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/newshomepage"
            android:layout_marginTop="10dp"

            >

            <TextView
                android:id="@+id/textViewEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/cardView"
                android:background="@drawable/card_border"
                android:gravity="center"
                android:text="Upcoming Events"
                android:textAlignment="center"
                android:textColor="@color/amarpushpapp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/up_coming_event_recyler_view"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="35dp"
                android:background="@color/amarpushpapp"
                android:paddingBottom="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="0dp">

            </android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
