<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="org.amarpushp.android.activities.Contact_Us">


    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Contact Us"
        android:textColor="@color/amarpushpapp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="@drawable/amarpushp_gradient">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="184dp"
        android:layout_height="158dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/logodifferntsize"
            app:civ_border_color="@color/amarpushpapp"
            app:civ_border_width="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_above="@+id/textView14"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:focusable="auto"
            android:visibility="visible"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Amarpushp Educational and Welfare Society"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="11dp"
                android:gravity="center"
                android:text="Registered under Socities Registration Under Act of 1980" />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView14"
        android:scrollIndicators="right"
        android:scrollbars="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:layout_alignParentBottom="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card1"
                android:layout_marginBottom="0dp"
                android:layout_alignParentLeft="true">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/amarpushp_gradient">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/textView16"
                            android:layout_marginTop="15dp"
                            android:text="Administration Office"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignLeft="@+id/textView16" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="312dp"
                            android:layout_height="113dp"
                            android:layout_centerInParent="true"
                            android:text="Arihant Arden, Sector 1 (Bisrakh Village),  Greater Noida West Uttar Pradesh - 201306,  India"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:typeface="sans"
                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:id="@+id/card1"
                android:layout_alignParentLeft="true">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="166dp"
                        android:background="@drawable/amarpushp_gradient">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/textView18"
                            android:layout_marginTop="15dp"
                            android:text="Registerd Office"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_alignLeft="@+id/textView18" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="307dp"
                            android:layout_height="108dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="18dp"
                            android:text="196/8/CD Naya Pura Kareli, Allahabad Uttar Pradesh - 211016,  India"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="22sp"
                            android:typeface="sans" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>